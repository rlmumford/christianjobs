    return;
  }

  if (!empty($form['location_geo__proximity'])) {
    $form['location_geo__proximity']['#type'] = 'container';
    $form['location_geo__proximity']['value']['#title'] = 'Location';
    $form['location_geo__proximity']['value']['#description'] = NULL;
