<div {{ attributes.addClass('col-12', 'col-lg-6', 'mb-4') }}>
  <div {{ content_attributes.addClass('card', 'h-100', 'card-summary') }}>
    <div class="card-body">
      <h3 class="card-title mb-0">{{ title }}</h3>
      <div class="card-text mt-2">
        {{ content }}
      </div>
      <div class="card-links">
        {% for key, button in buttons %}
          <a href="{{ button.link }}"{{ button.attributes|without('href').addClass('card-link', 'font-small') }}>{{ button.text }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
